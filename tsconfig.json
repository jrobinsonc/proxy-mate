{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}